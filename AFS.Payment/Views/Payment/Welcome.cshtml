@model AFS.Payment.Models.WelcomeModel
@{
    ViewBag.Title = "Simplified payment";
}

<div class="jumbotron">
    <h1>
        Simplified payment <img class="commercial-pict-big" src="../../Content/pict/devices.png">
    </h1>
</div>
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Order", "Payment", FormMethod.Post, new {@class = "toOrderForm"}))
        {
            @Html.HiddenFor(m => m.OrderId)
            @Html.HiddenFor(m => m.DateOfBirthString)
            <div class="row">
                <div class="col-md-12">
                    <p>
                        <label>To continue with the payment enter your date of birth</label>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3" id="dtp">
                    <input type="text" class="form-control" placeholder="Date of birth">
                    @Html.ValidationMessageFor(m => m.DateOfBirthString)
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">Order details</button>
                </div>
                
            </div>
        }
    </div>
</div>


