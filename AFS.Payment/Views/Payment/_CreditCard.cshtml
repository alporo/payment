@model AFS.Payment.Models.CreditCardModel
<div class="card mt-4">
    <div class="card-header">
        Payment <small class="form-text text-muted">Visa, Master Card, American Express</small>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Pay", "Payment", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.OrderId)
            <div class="form-group">
                Fill you credit card number:
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        @Html.EditorFor(m => m.Number, new {htmlAttributes = new {@class = "form-control", placeholder = "Credit card number"}})
                        @Html.ValidationMessageFor(m => m.Number)
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mb-2">Pay</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
