@section CustomScripts
{
    <script>
        $(document).ready(function() {
            var dtp = $('#dtp input').datepicker({
                format: 'dd.mm.yyyy',
                autoclose: true
            });
            dtp.on('changeDate',
                function(e) {
                    $('#DateOfBirthString').val(Date.parse(e.date));
                });
            $(".toOrderForm").data("validator").settings.ignore = "";
        });
    </script>
}